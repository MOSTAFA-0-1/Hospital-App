<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="372dp"
        android:layout_height="177dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/white"
        android:background="@drawable/ronded_card"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/ronded_card"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <LinearLayout
                android:layout_width="133dp"
                android:layout_height="173dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="137dp"
                    android:layout_height="186dp"


                    android:src="@drawable/doctor2"
                    android:id="@+id/hdoc_img">

                </ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="165dp"
                android:layout_height="165dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/hdoc_name"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="28dp"
                    android:text="@string/ndoc2"
                    android:textSize="23dp"
                    android:textStyle="bold"></TextView>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:id="@+id/hDoc_spec"
                    android:text="@string/doc_des2"
                    android:textColor="@color/shadowgr"
                    android:textSize="15dp"
                    android:textStyle="bold"
                   />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:id="@+id/hDoc_time"
                    android:text="Time"
                    android:textColor="@color/primary"
                    android:textSize="28dp"></TextView>



            </LinearLayout>


        </LinearLayout>
</LinearLayout>
</LinearLayout>