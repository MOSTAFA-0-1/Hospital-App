<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#DBE5F1"
        android:clickable="true"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgfdoc2"
            android:layout_width="120dp"
            android:layout_height="126dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/doc"></de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/namefdoc"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Dr.Merna"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/pricefdoc"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="25.00/hours"
            android:textAlignment="center"
            android:textColor="#53B175"
            android:textSize="15sp"
            android:textStyle="bold"></TextView>
    </LinearLayout>
</LinearLayout>