<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">


      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="450dp"
          android:layout_margin="30dp"
          android:background="@drawable/ronded_card">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/title"
                  android:paddingLeft="20dp"
                  android:paddingTop="15dp"
                  android:text="Advanced Young Indian Health Checkup"
                  android:textColor="#030303"
                  android:textSize="18dp" />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:paddingLeft="20dp"
                  android:text="Ideal for individuals aged 21-40 years"
                  android:textColor="#7C7C7C" />

              <TextView
                  android:layout_width="150dp"
                  android:layout_height="35dp"
                  android:layout_marginLeft="15dp"
                  android:layout_marginTop="20dp"
                  android:background="@drawable/border"
                  android:paddingLeft="20dp"
                  android:paddingTop="6dp"
                  android:text="69 tests included"
                  android:textColor="#13B175"

                  android:textFontWeight="@integer/material_motion_duration_long_1" />

              <ImageView
                  android:layout_width="310dp"
                  android:id="@+id/testsdoc"
                  android:layout_marginLeft="5dp"
                  android:layout_marginRight="5dp"
                  android:layout_height="230dp"
                  android:layout_marginTop="10dp"
                  android:scaleType="fitXY"
                  app:srcCompat="@drawable/doc" />

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="9dp">

                  <LinearLayout
                      android:layout_width="200dp"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">

                      <LinearLayout
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content">

                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:paddingLeft="15dp"
                              android:text="$ 358"
                              android:textColor="#030303" />

                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:paddingLeft="5dp"
                              android:text="$ 330"
                              android:textColor="#7C7C7C" />

                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:paddingLeft="3dp"
                              android:text="35% off"
                              android:textColor="@color/primary" />
                      </LinearLayout>

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:paddingLeft="15dp"
                          android:text="@string/_10_health_cashback_t_c"
                          android:textColor="#7C7C7C" />
                  </LinearLayout>

                  <Button
                      android:layout_width="100dp"
                      android:layout_height="35dp"
                      android:layout_marginLeft="5dp"
                      android:background="@drawable/button_style"
                      android:backgroundTint="@color/primary"
                      android:paddingTop="1dp"
                      android:text="Book Now" />

              </LinearLayout>

          </LinearLayout>
      </RelativeLayout>


</LinearLayout>