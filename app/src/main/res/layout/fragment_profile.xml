<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_7_login_screen_01"
    tools:context=".profile" >

    <ImageView
        android:id="@+id/imageView22"
        android:layout_width="432dp"
        android:layout_height="408dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/grean_back" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="176dp"
        android:layout_height="33dp"
        android:layout_marginTop="16dp"
        android:text="Personal information"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="426dp"
        android:layout_height="260dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="340dp"
            android:layout_height="40dp"
            android:layout_marginStart="50dp"
            android:background="@drawable/location"
            android:drawableRight="@drawable/endd"
            android:ems="10"
            android:hint="mohamed awees"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextTextphone"
            android:layout_width="340dp"
            android:layout_height="40dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/location"
            android:drawableRight="@drawable/endd"
            android:ems="10"
            android:hint="+888077999"
            android:inputType="phone" />

        <EditText
            android:id="@+id/editTextTextdata"
            android:layout_width="340dp"
            android:layout_height="40dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/location"
            android:drawableRight="@drawable/endd"
            android:ems="10"
            android:hint="19/7"
            android:inputType="date" />



        <Button
            android:id="@+id/button2"
            android:layout_width="309dp"
            android:layout_height="79dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="60dp"
            android:backgroundTint="#0EBE7F"
            android:text="Continue" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="388dp"
        android:layout_height="329dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView22"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:id="@+id/textView99"
            android:layout_width="146dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="16dp"
            android:text="Set up your profile"
            android:textColor="#FFFFFF"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="24dp"
            android:text="Update your profile to connect your doctor with"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"
            android:layout_marginTop="12dp"
            android:text="better impression."
            android:textColor="@color/white"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="116dp"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/group_716" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="431dp"
        android:layout_height="71dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="58dp"
            android:layout_height="21dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="26dp"
            android:text="Profile"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:textStyle="bold" />



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>