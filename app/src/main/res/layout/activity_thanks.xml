<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".thanks"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/back"
    android:gravity="center">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="307dp"
        android:layout_height="578dp"
        android:background="@drawable/layout"
        android:gravity="center"
        android:textAlignment="center">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="116dp"
            android:layout_height="79dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="31dp"
            android:background="@drawable/round"
            app:srcCompat="@drawable/recommendation" />

        <TextView
            android:id="@+id/thanks"
            android:layout_width="225dp"
            android:layout_height="35dp"
            android:layout_marginBottom="36dp"
            android:text="Thank You!"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:text="Your Appointment Successful"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/details"
            android:layout_width="239dp"
            android:layout_height="82dp"
            android:layout_marginBottom="40dp"
            android:text="You booked an appointment with Dr.Pediatrician Purpieson on February 21, at 02:00 PM"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button6"
            android:layout_width="259dp"
            android:layout_height="53dp"
            android:layout_marginBottom="40dp"
            android:backgroundTint="#53B175"
            android:text="Done"
            android:textStyle="bold" />

        <Button
            android:id="@+id/edit"
            android:layout_width="249dp"
            android:layout_height="48dp"
            android:layout_marginBottom="28dp"
            android:backgroundTint="#FEFEFE"
            android:text="Edit your appointmnet"
            android:textColor="#757575"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>