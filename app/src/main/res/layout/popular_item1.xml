<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:background="@drawable/ronded_card"
        android:backgroundTint="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/ronded_card"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/p1doc_photo"
                android:layout_width="130dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/pdoc3"></de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:id="@+id/p1doc_name"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Dr.Truluck Nick"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/p1_doc_spec"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Medicine Specialist"
                android:textAlignment="center"
                android:textColor="@color/shadowgr"
                android:textSize="12dp"
                android:textStyle="bold"></TextView>

            <RatingBar
                android:id="@+id/ra1"
                style="@style/foodRatingBar"
                android:layout_width="110dp"
                android:layout_height="26dp"
                android:layout_marginStart="20dp"
                android:isIndicator="false"
                android:numStars="5"
                android:rating="2"
                android:stepSize="0.5" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>