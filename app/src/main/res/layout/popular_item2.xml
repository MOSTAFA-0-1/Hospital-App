<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="372dp"
    android:layout_height="160dp"
    android:background="@drawable/ronded_card"
    android:backgroundTint="@color/white"
    android:orientation="horizontal"
    android:layout_marginLeft="19dp"
    android:layout_marginBottom="10dp">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ronded_card"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">


            <LinearLayout
                android:layout_width="133dp"
                android:layout_height="150dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="137dp"
                    android:layout_height="186dp"
                    android:id="@+id/docPhoto"


                    android:src="@drawable/doctor2">

                </ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="165dp"
                android:layout_height="165dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/docName"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="28dp"
                    android:text="@string/ndoc2"
                    android:textSize="23dp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/docSpec"
                    android:layout_marginStart="5dp"
                    android:text="@string/doc_des2"
                    android:textColor="@color/shadowgr"
                    android:textSize="15dp"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:id="@+id/stars"
                    android:text="4 Stars"
                    android:textColor="#E1B42E"
                    android:textSize="28dp"
                    android:textStyle="bold"></TextView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rate"
                        android:text="2.4"
                        android:textSize="28dp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(2475 views)"
                        android:id="@+id/views"
                        android:textColor="@color/shadowgr"
                        android:textSize="20dp"
                        android:textStyle="bold"></TextView>

                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:id="@+id/love11"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/ic_baseline_favorite_border_24">


            </ImageView>
        </LinearLayout>


</LinearLayout>